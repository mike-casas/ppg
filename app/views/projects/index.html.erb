<h1>Projects</h1>

  <%= render "form" %>


<div class="table-responsive">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Owned project</th>
      </tr>
    </thead>
    <tbody>
    <% @owned_projects.each do |t| %>
      <tr>
        <td><%= t.name %></td>
        <td><%= link_to "ver",project_path(t) %></td>
        <td><%= link_to "editar",edit_project_path(t) %></td>
        <td><%= link_to "eliminar",project_path(t), method: :delete , data: { confirm: "Deseas eliminar este registro"} %></td>
      </tr>
    <% end %>

    </tbody>
  </table>
</div>

<div class="table-responsive">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>member project</th>
      </tr>
    </thead>
    <tbody>
    <% @invited_projects.each do |t| %>
      <tr>
        <td><%= t.name %></td>
        <td><%= link_to "ver",project_path(t) %></td>

      </tr>
    <% end %>

    </tbody>
  </table>
</div>






