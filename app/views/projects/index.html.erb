
<div class="container container-dashboard">

<div class="row">
   <div class="col-lg-4">
     <span class=""><i class='fa fa-fw fa-envelope icon-dashboard'></i></span>
     <span class="blue-dashboard">PROYECTOS</span>
    </div>
    <div class="col-lg-8 text-right input-project">

     <span class="input input--isao">
          <input class="input__field input__field--isao" type="text" id="input-40" />
          <label class="input__label input__label--isao" for="input-40" data-content="Nombre nuevo Proyecto">
            <span class="input__label-content-isao input__label-content--isao">Nombre nuevo Proyecto</span>
          </label>
     </span><span class="add-input"><i class="fa fa-plus-square fa-2x"></i></span>
   </div>
</div>

</div>

<div class="container dashboard-project">
  <div class="row">
      <%   state="owned" %>
      <% @owned_projects.each do |t| %>

          <%= list_project(t,state)%>

      <% end %>

     <%   state="invited" %>
      <% @invited_projects.each do |t| %>
      <tr>
        <%= list_project(t,state)%>
      </tr>
    <% end %>
  </div>
</div>

