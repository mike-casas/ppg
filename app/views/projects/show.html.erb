<div class="container">

<h1>project</h1>

<%= @project.name %>

<br/>

   <h2>owner</h2>

   <%= current_user.name %>
   <br/>

  <div class="table-responsive">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>members</th>
      </tr>
    </thead>
    <tbody>
    <% @members.each do |t| %>
      <tr>
        <td><%= t.name %></td>
      </tr>
    <% end %>

    </tbody>
  </table>
</div>




    <%= form_tag project_documents_path(@project.id), method: :post  do %>
    <%= text_field_tag :file_name %>
    <%= hidden_field_tag :project_id, @project.id%>
    <%= submit_tag "guardar"%>
  <% end %>

 <hr/>
  <% if @project.user_id== current_user.id %>
  <%= link_to 'invitaciones', new_project_invitation_path(@project.id,project:@project.id), remote: true%> <% end%>
 <hr/>


  <ul id="list_file">
  <% Dir.glob("storage/#{@project.id}/*").each do |file| %>

    <li><%= link_to file.split('/').last, project_document_path(@project.id,@project.id,name:file) %></li>
  <% end %>
</ul>

</div>
