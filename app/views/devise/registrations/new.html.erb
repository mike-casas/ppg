<div class="container top">
  <div class="col-lg-6 col-lg-offset-3 container-login ">
    <h2>Registro</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <span class="input input--hideo">
      <%= f.text_field :name,autocomplete: "off",class:"input__field input__field--hideo", placeholder:"Nombre" %>
      <%= f.label :name, "<i class='fa fa-fw fa-user icon icon--hideo'></i>
      <span class='input__label-content input__label-content--hideo'>Username</span>".html_safe, class:"input__label input__label--hideo"%><br />
    </span>

    <span class="input input--hideo">
      <%= f.email_field :email,class:"input__field input__field--hideo",placeholder:"Email" %>
      <%= f.label :email , "<i class='fa fa-fw fa-envelope icon icon--hideo'></i>
      <span class='input__label-content input__label-content--hideo'>Username</span>".html_safe, class:"input__label input__label--hideo"%><br />
    </span>

    <span class="input input--hideo">

      <%= f.password_field :password,autocomplete: "off",class:"input__field input__field--hideo" ,placeholder:"Contraseña" %>
      <%= f.label :password , "<i class='fa fa-fw fa-lock icon icon--hideo'></i>
      <span class='input__label-content input__label-content--hideo'>Username</span>".html_safe, class:"input__label input__label--hideo"%><br />
    </span><br/>
     <% if @validatable %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
    <span class="input input--hideo">
      <%= f.password_field :password_confirmation,autocomplete: "off",class:"input__field input__field--hideo" , placeholder:"Repite la Contraseña"%>
      <%= f.label :password_confirmation , "<i class='fa fa-fw fa-lock icon icon--hideo'></i>
      <span class='input__label-content input__label-content--hideo'>Username</span>".html_safe, class:"input__label input__label--hideo"%><br />
    </span>
    <span class="input ">
      <div class="actions">
        <%= f.submit "Enviar" , class:"btn btn-success btn-lg"%>
      </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </span>


  </div>
</div>
