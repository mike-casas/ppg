<div class="container top ">
  <div class="col-lg-6 col-lg-offset-3 container-login ">
    <h2>Entrar</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

         <span class="input input--hideo">
          <%= f.email_field :email,class:"input__field input__field--hideo" ,placeholder:"Email"%>
           <%= f.label :email , "<i class='fa fa-fw fa-envelope icon icon--hideo'></i>
            <span class='input__label-content input__label-content--hideo'>Username</span>".html_safe, class:"input__label input__label--hideo"%><br />
        </span>
         <span class="input input--hideo">
          <%= f.password_field :password,autocomplete: "off",class:"input__field input__field--hideo" , placeholder:"P assword"%>
           <%= f.label :password , "<i class='fa fa-fw fa-lock icon icon--hideo'></i>
            <span class='input__label-content input__label-content--hideo'>Username</span>".html_safe, class:"input__label input__label--hideo"%><br />
        </span>

        <span class="input ">
            <% if devise_mapping.rememberable? -%>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
              <% end -%>

              <div class="actions">
                <%= f.submit "Enviar" , class:"btn btn-success btn-lg"%>
              </div>
              <% end %>

              <%= render "devise/shared/links" %>
         </span>



</div>
</div>
